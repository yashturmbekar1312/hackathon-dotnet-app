{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "FeatureFlags": {
    "EnableSwagger": true,
    "EnableRateLimiting": true,
    "EnableDetailedErrors": false
  },
  "CORS": {
    "AllowedOrigins": ["*"]
  },
  "Email": {
    "Provider": "API",
    "ApiKey": "",
    "ApiUrl": "https://api.brevo.com/v3/smtp/email",
    "FromEmail": "yash.turmbekar@invimatic.com",
    "FromName": "invimatic",
    "TimeoutSeconds": 30
  },
  "RateLimit": {
    "General": {
      "PermitLimit": 1000,
      "WindowMinutes": 1
    },
    "Auth": {
      "PermitLimit": 10,
      "WindowMinutes": 1
    }
  },
  "AllowedHosts": "*"
}
