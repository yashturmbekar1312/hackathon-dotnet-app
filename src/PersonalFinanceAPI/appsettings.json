{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=personal_finance_db;Username=postgres;Password=root"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForProduction2025",
    "Issuer": "PersonalFinanceAPI",
    "Audience": "PersonalFinanceAPI",
    "AccessTokenExpirationMinutes": "60",
    "RefreshTokenExpirationDays": "30"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.PostgreSQL"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/personal-finance-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": "00:01:00",
    "ReplenishmentPeriod": "00:00:10",
    "TokensPerPeriod": 10,
    "QueueLimit": 10
  },
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://localhost:3000",
      "https://localhost:5173"
    ],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
  },
  "Email": {
    "Provider": "API",
    "ApiKey": "",
    "ApiUrl": "https://api.brevo.com/v3/smtp/email",
    "FromEmail": "yash.turmbekar@invimatic.com",
    "FromName": "invimatic",
    "TimeoutSeconds": 30
  },
  "FeatureFlags": {
    "EnableSwagger": true,
    "EnableDetailedErrors": true,
    "EnableRateLimiting": true,
    "EnableAuditLogging": true
  },
  "Pagination": {
    "DefaultPageSize": 20,
    "MaxPageSize": 100
  },
  "Financial": {
    "DefaultCurrency": "INR",
    "SupportedCurrencies": ["INR", "USD", "EUR"],
    "DefaultSavingsThreshold": 5000.0,
    "DefaultExpenseThreshold": 1000.0
  },
  "BackgroundServices": {
    "TransactionProcessingIntervalMinutes": 5,
    "AlertMonitoringIntervalMinutes": 10,
    "MonthlyComputationIntervalHours": 24
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
